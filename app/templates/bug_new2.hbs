<form {{action "save" on="submit"}} class="container form--long">

  <h1 class="newBug__header">New bug</h1>

  {{#if flashMessage}}
    <div class="alert error">
      {{flashMessage}}
    </div>
  {{/if}}

  <div class="form__item">
    <label>Summary:</label>
    {{input type="text" value=fields.summary.currentValue}}
  </div>
  <div class="form__item">
    <label>Component:</label>
    {{select content=fields.component.values selection=selectedComponent value=fields.component.currentValue optionLabelPath="name" optionValuePath="name" prompt="[Component]"}}
  </div>
  <div class="form__item">
    <label>Version:</label>
    {{select content=fields.version.values value=fields.version.currentValue optionLabelPath="name" prompt="[Version]"}}
  </div>
  <div class="form__item">
    <label>Severity:</label>
    {{select content=fields.severity.values value=severity optionLabelPath="name" optionValuePath="name"}}
  </div>
  <div class="form__item">
    <label>Hardware:</label>
    {{select content=fields.platform.values value=fields.platform.currentValue optionLabelPath="name" prompt="[Hardware]"}}
  </div>
  <div class="form__item">
    <label>OS:</label>
    {{select content=fields.opSys.values value=fields.opSys.currentValue optionLabelPath="name" prompt="[OS]"}}
  </div>
  <div class="form__item">
    <label>Priority:</label>
    {{select content=fields.priority.values value=fields.priority.currentValue optionLabelPath="name"}}
  </div>
  <div class="form__item" style="display: none">
    <label>Flags:</label>

    <ul>
      {{#each fields.flags.values}}
        <li>{{name}}: {{view Ember.Select contentBinding="values" valueBinding="currentValue" prompt=" " optionLabelPath="content"}}</li>
      {{/each}}
    </ul>

  </div>
  <div class="form__item">
    <label>Status:</label>
    {{select content=fields.status.values value=fields.status.currentValue optionLabelPath="name" disabled=true}}
  </div>
  <div class="form__item">
    <label>Assignee:</label>
    {{input type="text" value=assignedTo disabled=cannotEditAssignee}}
  </div>
  <div class="form__item">
    <label>Default CC:</label>
    <span class="field">{{initialCc}}</span>
  </div>
  <div class="form__item">
    <label>QA Contact:</label>
    {{input type="text" value=qaContact disabled=cannotEditQAContact}}
  </div>
  <div class="form__item">
    <label>CC:</label>
    {{multi-value values=fields.cc.currentValue}}
  </div>
  <div class="form__item">
    <label>Alias:</label>
    {{input type="text" value=fields.alias.currentValue}}
  </div>
  <div class="form__item">
    <label>URL:</label>
    {{input type="text" value=fields.url.currentValue}}
  </div>
  <div class="form__item">
    <label>Description:</label>
    {{textarea value=fields.description.currentValue}}
  </div>

  {{#each customFields itemController="field"}}
    <div class="form__item">
      <label>{{description}}:</label>
      {{#if values}}
        {{select content=values value=defaultValue optionLabelPath="name" optionValuePath="name" prompt=prompt disabled=isDisabled}}
      {{else}}
        {{input type="text" name=name}}
      {{/if}}
    </div>
  {{/each}}

  {{#view 'groups' groupsBinding="fields.groups.values" selectedGroupsBinding="groups"}}
    <div class="form__item">
      <label>Groups:</label>
      <ul class="field">
        {{#each view.groups}}
          <li>
            <label>{{view 'groups_checkbox' nameBinding="name"}} {{description}}</label>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/view}}

  {{#if isSaving}}
    Saving...
  {{else}}
    <button type="submit" class="button--form button--large">Save</button>
  {{/if}}
</form>
