<div class="comments">
  {{#if comments.isLoading}}
    Loading comments...
  {{else}}
    {{view Ember.TextArea valueBinding="newCommentText"}}
    <button {{action saveComment}}>Save</button>
    {{view 'comment' contextBinding="firstComment"}}
    {{#unless isShowingRemainingComments}}
      {{#if remainingComments}}
        <a href="#" {{action showRemainingComments}}>
          Show remaining {{remainingComments.length}} comments
        </a>
      {{/if}}
    {{else}}
      {{each remainingComments itemView="comment"}}
    {{/unless}}
  {{/if}}
</div>
